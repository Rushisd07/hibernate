<?xml version="1.0" encoding="UTF-8"?>

<hibernate-mapping>  
  <class name="com.hql.Disk" table="disk">  <!-- package name.java class name    &   DB table name -->
  
    <id name="dskId" column="Id" type="int" length="1">  <!-- name=beanProperty name -->
    	<generator class="increment"/>
    	
    </id>  
     
    <property name="dskName" column="Name" type="string" length="20"/>	<!-- name=beanProperty name & column=DB column name -->
    <property name="dskType" column="Type" type="string" length="10"/>
    <property name="dskPrice" column="Price" type="int" length="1"/>
    
          
  </class>  
            
</hibernate-mapping>
